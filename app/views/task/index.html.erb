<div class="main">

  <%= form_tag("/task/search") do %>
    <div class="form-group">
      <div class="input-content">
        <label>
          日付：<input type="date" class="input-date" name="search_date" value="<%= @limit_date %>"/>
        </label>
        <lavel>
          <input type="checkbox" id="input-check" name="close_display">
          <label for="close_display">完了したタスクを表示する</label>
        </lavel>
        <br><br>
        <input type="submit" class="btn-flat-border" value="検索">
      </div>
    </div>
  <% end %>

  <% @tasks.each do |task| %>
    <div class="container">
      <div>
        due <%= task.limit_date %>
        <% if (@today > task.limit_date) && (task.status != 1) %>
          <wrap class="error_limit">期限超過</wrap>
        <% end %>
        ステータス：<%= task.status %>
      </div>
      <br>
      <div><%= task.title %></div>
      <br>

      <wrap class="btn btn-flat-border">
        <%= link_to("詳細", "/task/show/#{task.id}") %>
      </wrap>
      <wrap class="btn btn-flat-border">
        <%= link_to("編集", "/task/edit/#{task.id}") %>
      </wrap>
      <wrap class="btn btn-flat-border">
        <%= link_to("削除", "/task/destroy/#{task.id}") %>
      </wrap>

      <br><br>

      <% if task.status == 0 %>
        <%= form_tag("/task/close") do %>
          <input type="hidden" class="input-text" name="comment_type" value="1"/>
          <input type="hidden" class="input-text" name="id" value="<%= task.id %>"/>
          <label>
            <textarea class="content-area" name="comment" rows="3"></textarea>
            <br>
            <input type="submit" class="btn-flat-border" value="完了">
          </label>
        <% end %>
      <% else %>
        <%= form_tag("/task/cancel_status") do %>
          <input type="hidden" class="input-text" name="comment_type" value="1"/>
          <input type="hidden" class="input-text" name="id" value="<%= task.id %>"/>
          <label>
            <textarea class="content-area" name="comment" rows="3"></textarea>
            <br>
            <input type="submit" class="btn-flat-border" value="対応中に戻す">
          </label>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <wrap class="btn btn-flat-border">
    <%= link_to("新規登録", "/task/new") %>
  </wrap>

  <%= form_tag("/task/create_task_do") do %>
    <div class="form-group">
      <div class="input-content">
        <label>
          日付：<input type="date" class="input-date" name="search_date" value="<%= @limit_date %>"/>
        </label>
        <lavel>
          <input type="checkbox" id="input-check" name="close_display">
        </lavel>
        <br><br>
        <input type="submit" class="btn-flat-border" value="ルーティーン作成">
      </div>
    </div>
  <% end %>

</div>