<!DOCTYPE html>
<html lang="">
<head>
  <title>MyIssueList</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<header>
  <ul>
    <% if @current_user %>
      <li><%= link_to("#{@current_user.user_name} さん", "/user/show/#{@current_user.id}") %></li>
      <li><%= link_to("ログアウト", "/logout/", {method: :post}) %></li>
    <% else %>
      <li><%= link_to("ログイン", "/login") %></li>
    <% end %>
    <li><%= link_to("ルーティーン", "/routine/index") %></li>
    <li><%= link_to("タスク", "/task/index") %></li>
    <li><%= link_to("Top", "/") %></li>
  </ul>
</header>

<% if flash[:notice] %>
  <div class="flash_notice">
    <%= flash[:notice] %>
  </div>
<% elsif flash[:alert] %>
  <div class="flash_alert">
    <%= flash[:alert] %>
  </div>
<% end %>
<%= yield %>
</body>
</html>
