<div class="main">
  <div class="container">
    <h1>ログイン</h1>
    <%= form_tag("/user/login_check") do %>
      <div class="form-group">
        <h2><label>ID</label></h2>
        <div class="input-content">
          <label>
            <input type="text" class="input-text" name="login_id">
          </label>
        </div>
      </div>

      <div class="form-group">
        <h2><label>password</label></h2>
        <div class="input-content">
          <label>
            <input type="password" class="input-text" name="password">
          </label>
        </div>
      </div>

      <hr>
      <br>
      <input type="submit" class="btn-flat-border" value="確定">
      <wrap class="btn btn-flat-border">
        <%= link_to("新規登録", "/user/new") %>
      </wrap>
    <% end %>
    <br><br>
  </div>
</div>